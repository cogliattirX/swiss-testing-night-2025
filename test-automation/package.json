{
  "name": "swiss-testing-day-2025-ui-tests",
  "version": "1.0.0",
  "description": "UI Tests for Sauce Demo using Playwright MCP",
  "scripts": {
    "test": "playwright test",
    "test:ci": "cross-env TEST_MODE=ci playwright test tests/websites/sauce-demo/checkout-flow.spec.ts tests/websites/sauce-demo/error-handling.spec.ts tests/websites/sauce-demo/login.spec.ts tests/websites/sauce-demo/login-success.spec.ts tests/websites/sauce-demo/navigation-state.spec.ts tests/websites/sauce-demo/product-sorting.spec.ts tests/websites/sauce-demo/shopping-cart.spec.ts",
    "test:ci:stable": "cross-env TEST_MODE=ci playwright test tests/websites/sauce-demo/checkout-flow.spec.ts tests/websites/sauce-demo/error-handling.spec.ts tests/websites/sauce-demo/login.spec.ts tests/websites/sauce-demo/login-success.spec.ts tests/websites/sauce-demo/navigation-state.spec.ts tests/websites/sauce-demo/product-sorting.spec.ts tests/websites/sauce-demo/shopping-cart.spec.ts",
    "test:all": "cross-env TEST_MODE=ci playwright test",
    "test:debug": "cross-env TEST_MODE=debug playwright test --project=chromium",
    "test:demo": "cross-env TEST_MODE=demo playwright test --project=chromium",
    "test:workshop": "cross-env TEST_MODE=workshop playwright test --project=chromium",
    "test:headed": "cross-env TEST_MODE=demo playwright test --project=chromium",
    "test:slow": "cross-env TEST_MODE=workshop playwright test --project=chromium",
    "test:record": "cross-env TEST_MODE=workshop playwright test --project=chromium",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:all-browsers": "cross-env TEST_MODE=ci playwright test --project=chromium --project=firefox --project=webkit",
    "test:demoqa": "cross-env TEST_MODE=demo playwright test tests/websites/demoqa/ --project=chromium",
    "test:demoqa:elements": "cross-env TEST_MODE=demo playwright test tests/websites/demoqa/elements.spec.ts --project=chromium",
    "test:demoqa:forms": "cross-env TEST_MODE=demo playwright test tests/websites/demoqa/forms.spec.ts --project=chromium",
    "test:demoqa:interactions": "cross-env TEST_MODE=demo playwright test tests/websites/demoqa/interactions.spec.ts --project=chromium",
    "test:demoqa:widgets": "cross-env TEST_MODE=demo playwright test tests/websites/demoqa/widgets.spec.ts --project=chromium",
    "test:demoqa:alerts": "cross-env TEST_MODE=demo playwright test tests/websites/demoqa/alerts-frames-windows.spec.ts --project=chromium",
    "test:demoqa:ci": "cross-env TEST_MODE=ci playwright test tests/websites/demoqa/ --project=chromium",
    "test:generic": "cross-env TEST_MODE=demo playwright test tests/websites/generic/ --project=chromium",
    "mcp:start": "@executeautomation/playwright-mcp-server",
    "workshop:setup": "npm install && npx playwright install --with-deps",
    "workshop:demo": "npm run test:demo -- tests/websites/generic/simple-quality-check.spec.ts",
    "workshop:sauce": "npm run test:workshop -- tests/websites/sauce-demo/",
    "workshop:demoqa": "npm run test:demoqa",
    "report": "playwright show-report",
    "trace:show": "playwright show-trace",
    "install:browsers": "playwright install --with-deps"
  },
  "dependencies": {
    "@executeautomation/playwright-mcp-server": "latest",
    "@playwright/test": "^1.39.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "cross-env": "^10.0.0",
    "typescript": "^5.9.2"
  }
}
